<!-- index.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<header>
    <h1>Enter your pokemon moveset info here!</h1>
</header>

<p>Information on our <strong>moveset</strong> is here!</p>

<h2>Search Using Our Datadex</h2>

<p>Search by move name using the field below. Partial names are ok as well!</p>
<form id="search-moveset-html" method='GET' action='/'>
    <label for="input-moveset">Search by Moveset Name: </label>
    <input type="text" name="moveName" id="input-trainer-html-search">
    
    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>

{{!-- Create a table --}}
<table id="movesets-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>

        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print trainer table info in order --}}
        {{#each data}}
        <tr>
            <td>{{this.pokemonID}}</td>
            <td>{{this.moveSetID}}</td>
            <td>{{this.moveOne}}</td>
            <td>{{this.moveTwo}}</td>
            <td>{{this.moveThree}}</td>
            <td>{{this.moveFour}}</td>



            <td><button onclick="deleteMove({{this.moveID}})">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_move.js"></script>
